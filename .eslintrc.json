{
  "root": true,
  "env": {
    "es2022": true,
    "node": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2022
  },
  "ignorePatterns": [
    "dist/**",
    "build/**",
    ".next/**",
    "node_modules/**"
  ],
  "overrides": [
    {
      "files": ["apps/web/**/*"],
      "extends": ["next/core-web-vitals"],
      "settings": {
        "next": {
          "rootDir": ["apps/web"]
        }
      }
    }
  ]
}
